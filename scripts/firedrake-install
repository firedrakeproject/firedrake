class directory(object):
    """Context manager that executes body in a given directory"""
    def __init__(self, dir):
        self.dir = dir

    def __enter__(self):
        self.olddir = os.path.abspath(os.getcwd())
        os.chdir(self.dir)

    def __exit__(self, *args):
        os.chdir(self.olddir)


